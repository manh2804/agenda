<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhắc nhở thông minh"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Reminder content card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_reminder_card"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Clock icon -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_clock_reminder"
            android:layout_marginEnd="12dp"
            android:tint="#007BFF" />

        <!-- Reminder text -->
        <TextView
            android:id="@+id/tvReminderText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đã đến giờ Họp team hàng tuần (10:00 AM)"
            android:textColor="#007BFF"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Action button -->
    <Button
        android:id="@+id/btnUnderstood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_button_blue_rounded"
        android:text="Đã hiểu"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="10dp"
        android:textStyle="bold" />

</LinearLayout>